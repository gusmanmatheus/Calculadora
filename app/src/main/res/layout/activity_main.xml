<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="100"
    >


    <EditText
        android:id="@+id/saida_Id"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:layout_weight="8"

        android:textColorLink="@android:color/black"
        android:weightSum="100" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_weight="22"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/botaoMais_Id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="+" />
        <Button
            android:id="@+id/botaoMenos_Id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="-" />
        <Button
            android:id="@+id/botaoVezes_Id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="*" />
        <Button
            android:id="@+id/botaoDivisao_Id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="/" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="1dp"
        android:layout_weight="22"
        android:orientation="horizontal"
        android:weightSum="100"
        >
        <Button
            android:id="@+id/sete_Id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="7" />
        <Button
            android:id="@+id/oito_Id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="8" />
        <Button
            android:id="@+id/nove_Id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="9" />
        <Button
            android:id="@+id/igual_Id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="=" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="0dp"
        android:layout_weight="49"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginBottom="10dp"
        >

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="75"
          android:orientation="vertical"
          android:weightSum="100"
          >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="50"
              android:orientation="horizontal"
              android:weightSum="100"

              >

              <Button
                  android:id="@+id/quatro_Id"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="33.3"                  android:text="4" />

              <Button
                  android:id="@+id/cinco_Id"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="33.3"                  android:text="5" />

              <Button
                  android:id="@+id/seis_Id"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="33.3"

                  android:text="6" />


          </LinearLayout>

          <LinearLayout

              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_marginTop="0dp"
              android:layout_weight="50"
              android:orientation="horizontal"
              android:weightSum="100"
              >
              <Button
                  android:id="@+id/um_Id"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="33.3"                  android:text="1" />
              <Button
                  android:id="@+id/dois_Id"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="33.3"                  android:text="2" />
              <Button
                  android:id="@+id/tres_Id"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="33.3"
                  android:text="3" />
          </LinearLayout>






      </LinearLayout>

        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="0" />




    </LinearLayout>




</LinearLayout>